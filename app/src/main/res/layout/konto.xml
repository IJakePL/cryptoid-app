<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212529"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/bossbar1"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home_button1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/angle_left"
                android:tint="#fff"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="USTAWIENIA KONTA"
                android:textColor="#DFE3E6"
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="visible" />

            <View
                android:id="@+id/separator1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_below="@+id/bossbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_menu_lol"
                android:backgroundTint="#2B2F33"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informacje o koncie"
                    android:layout_marginLeft="5dp"
                    android:textColor="#DFE3E6"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_menu_lol"
                    android:backgroundTint="#212529"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#4799A1"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/comment_username"
                            android:tint="#023855"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:text="Zmień swoją nazwę"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#50A147"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/at"
                            android:tint="#115502"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Zmień adres email"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pass"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#A19547"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/key"
                            android:tint="#554A02"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Ustaw nowe hasło"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_menu_lol"
                android:backgroundTint="#2B2F33"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zarządzanie bezpieczeństwem"
                    android:layout_marginLeft="5dp"
                    android:textColor="#DFE3E6"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_menu_lol"
                    android:backgroundTint="#212529"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/nestnetsecurity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#4750A1"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/shield_keyhole"
                            android:tint="#021055"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:text="NestNet Security"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bezpipry"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#7F47A1"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/shield1"
                            android:tint="#4D0255"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Prywatność i bezpieczeństwo"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zaproszeniadoznaj"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#A21FB1"
                            android:contentDescription="przycisk menu"
                            android:padding="6dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/life"
                            android:tint="#F4B3FF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Zaproszenia do znajomych"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/polaczonekonta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#1F88B1"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/laptop_mobile"
                            android:tint="#B3D0FF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Połączone konta"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zeskanujkodqr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#B1A21F"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/qr"
                            android:tint="#FFFBB3"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Zeskanuj kod QR"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_menu_lol"
                android:backgroundTint="#2B2F33"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zarządzanie kontem"
                    android:layout_marginLeft="5dp"
                    android:textColor="#DFE3E6"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_menu_lol"
                    android:backgroundTint="#212529"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/dezactiveaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#A16B47"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/delete_user"
                            android:tint="#552302"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:text="Dezaktywuj konto"
                            android:textColor="#DFE3E6"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deleteaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#A14747"
                            android:contentDescription="przycisk menu"
                            android:padding="8dp"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/trash"
                            android:tint="#550202"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="Usuń swoje konto"
                            android:textColor="#F87373"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/bossbar3"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:backgroundTint="#15191C"
        android:background="@drawable/corner_dsww">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/film"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/search"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/tv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gamepad"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/comment_alt"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_bars"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>