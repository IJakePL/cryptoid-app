<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/lg_back"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/angle_left"
                    android:tint="#959595"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Welcome to Cryptoid"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#808080"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start exploring the crypto world eight now. it's simple and secure with our app."
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="#959595"
                    android:textSize="17sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <View
                    android:id="@+id/separator2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="275dp"
                    android:layout_height="275dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    tools:ignore="UseAppTint"
                    android:contentDescription="przycisk menu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_19" />

                <View
                    android:id="@+id/separator3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:backgroundTint="#E1E1E0"
            android:background="@drawable/corner_dsww"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy way to manage your Cryptoid"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#808080"
                android:textSize="32sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy, sell and manage hundreds of cryptocurrencies easily and securely."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#959595"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_dsww"
                    android:backgroundTint="#f5f6f4"
                    android:text="Create a wallet"
                    android:textColor="#959595"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/wel_rozpocznij"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_dsww"
                    android:backgroundTint="#f5f6f4"
                    android:text="login to wallet"
                    android:textColor="#959595"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:id="@+id/wel_logowanie"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>