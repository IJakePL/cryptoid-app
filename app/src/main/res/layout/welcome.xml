<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15191C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/corner_wel"
            android:backgroundTint="#212529"
            android:scaleType="fitCenter"
            android:src="@drawable/background_nestnet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/welcome_button1"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:tint="#6EC8FA"
                    tools:ignore="UseAppTint"
                    android:contentDescription="przycisk menu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_1" />

                <View
                    android:id="@+id/separator1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZALOGUJ SIE"
                    android:textAlignment="center"
                    android:textColor="#DAD9D9"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginRight="12dp"
                    android:visibility="visible"
                    android:id="@+id/wel_logowanie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/separator2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:padding="40dp"
                    android:background="@drawable/corner_prf"
                    android:backgroundTint="#6EC8FA"
                    android:tint="#15191C"
                    tools:ignore="UseAppTint"
                    android:contentDescription="przycisk menu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rocket_lunch" />

                <View
                    android:id="@+id/separator3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Witaj w nowym wymiarze rozrywki! Znajdziesz tu najnowsze gry i aplikacje, które zapewnią Ci niezapomnianą rozrywkę! Czas na przygodę!"
                    android:textAlignment="center"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#DAD9D9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oglądaj live i graj gdzie chcesz, kiedy chcesz. Anuluj w dowolnym momencie. Swoboda i wygoda na wyciągnięcie ręki!"
                    android:textAlignment="center"
                    android:layout_margin="40dp"
                    android:textColor="#B8B6B6"
                    android:textSize="19sp"
                    android:layout_marginBottom="40dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/corner_login"
                android:backgroundTint="#6EC8FA"
                android:fontFamily="@font/aldrich"
                android:text="Rozpocznij przygodę"
                android:textColor="#15191C"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/wel_rozpocznij"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/corner_login"
                android:backgroundTint="#252525"
                android:fontFamily="@font/aldrich"
                android:text="Dowiedz się więcej"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/wel_dsw"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>