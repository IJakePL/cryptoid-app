<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15191C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/zjt_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="przycisk menu"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angle_left"
            android:tint="#6EC8FA"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/welcome_button1"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:tint="#6EC8FA"
            tools:ignore="UseAppTint"
            android:contentDescription="przycisk menu"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dp"
        android:orientation="vertical">

        <View
            android:id="@+id/separator1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wprowadź nazwę konta."
                android:textAlignment="viewStart"
                android:textColor="#DAD9D9"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white_create"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:backgroundTint="#212529">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wykreuj swój wyjątkowy pseudonim, który nada Twojemu kontu prestiżu."
                    android:textAlignment="viewStart"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail"
                    android:textAlignment="viewStart"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/podany_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="10dp"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasło"
                    android:textAlignment="viewStart"
                    android:textColor="#A6A6A6"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/podane_haslo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="10dp"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/nazwa_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_gray"
                    android:backgroundTint="#37A6A6A6"
                    android:fontFamily="@font/aldrich"
                    android:hint="Nazwa użytkownika"
                    android:inputType="text"
                    android:padding="14dp"
                    android:textColor="#CCCCCC"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_gray"
                    android:backgroundTint="#7C7C7C"
                    android:text="Kontynuuj"
                    android:textColor="#434343"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/zacznij_kont" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/separator2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>