<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lg_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="przycisk menu"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angle_left"
            android:tint="#959595"
            tools:ignore="UseAppTint" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@drawable/img_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CryptoID ver. 1.0.0 (production)"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the required values below."
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:textColor="#808080"
                android:textSize="15sp"
                android:visibility="visible" />

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#E1E1E0"
                android:layout_marginTop="20dp"
                android:background="@drawable/corner_chat_lol"
                android:padding="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textAlignment="textStart"
                        android:textColor="#808080"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner"
                        android:backgroundTint="#37A6A6A6"
                        android:hint=""
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#959595"
                        android:textColorHint="#959595"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Password"
                        android:textAlignment="textStart"
                        android:textColor="#808080"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner"
                        android:backgroundTint="#37A6A6A6"
                        android:hint=""
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#959595"
                        android:textColorHint="#959595"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/login_press"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/corner_login"
                        android:backgroundTint="#f5f6f4"
                        android:text="connect to wallet"
                        android:textColor="#959595"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/lg_utworz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/gradient_home"
                        android:text="Create a new wallet"
                        android:textColor="#f5f6f4"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/separator3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#959595"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information zone:"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="#959595"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <View
                            android:id="@+id/separator4"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#959595"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pol_pry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="1. Please read our privacy policy."
                        android:textAlignment="textStart"
                        android:textColor="#959595"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/pot_pom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="2. I need help logging in!"
                        android:textAlignment="textStart"
                        android:textColor="#959595"
                        android:textSize="15sp"
                        android:visibility="visible" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
</LinearLayout>