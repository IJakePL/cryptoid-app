<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/img_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CryptoID ver. 1.0.0 (production)"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="17sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the required values below."
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="17sp"
                android:visibility="visible" />

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="#232523"
                android:layout_marginTop="80dp"
                android:background="@drawable/corner"
                android:padding="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textAlignment="textStart"
                        android:textColor="#808080"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/email_input"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner"
                        android:backgroundTint="#171717"
                        android:hint=""
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#959595"
                        android:textColorHint="#959595"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Password"
                        android:textAlignment="textStart"
                        android:textColor="#808080"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/corner"
                        android:backgroundTint="#171717"
                        android:hint=""
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#959595"
                        android:textColorHint="#959595"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/login_press"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/corner_login"
                        android:backgroundTint="#171717"
                        android:text="connect to wallet"
                        android:textColor="#959595"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/lg_utworz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gradient_home"
                        android:text="Create a new wallet"
                        android:textColor="#f5f6f4"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="CryptoID.pl | Copyright Â© 2024"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#959595"
                        android:textSize="17sp"
                        android:visibility="visible" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
</LinearLayout>