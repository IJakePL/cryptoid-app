<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    android:orientation="vertical">

    <FrameLayout
        android:layout_below="@+id/bossbar"
        android:id="@+id/bossbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Actions"
                    android:textColor="#CDCFCD"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:backgroundTint="#232523"
                android:background="@drawable/corner_ust">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:padding="6dp"
                    android:contentDescription="przycisk menu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search"
                    android:tint="#959595"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="text"
                    android:layout_gravity="center"
                    android:hint="Search"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    android:backgroundTint="#232523"
                    android:background="@drawable/corner_ust"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-6928750575920542/1190402869">
                </com.google.android.gms.ads.AdView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fast transactions"
                        android:textColor="#CDCFCD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/corner_prf"
                        android:backgroundTint="#232523"
                        android:padding="8dp"
                        android:contentDescription="przycisk menu"
                        android:scaleType="fitCenter"
                        android:src="@drawable/angle_right"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_ust"
                        android:backgroundTint="#232523"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#624DC3"
                            android:contentDescription="przycisk menu"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/replace"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exchange"
                            android:textColor="#959595"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_ust"
                        android:backgroundTint="#232523"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#4DC353"
                            android:contentDescription="przycisk menu"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/basket_shopping_simple"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buy"
                            android:textColor="#959595"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_ust"
                        android:backgroundTint="#232523"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#4D90C3"
                            android:contentDescription="przycisk menu"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/coins"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sell"
                            android:textColor="#959595"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_ust"
                        android:backgroundTint="#232523"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#AD4DC3"
                            android:contentDescription="przycisk menu"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/card"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay"
                            android:textColor="#959595"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="105dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_ust"
                        android:backgroundTint="#232523"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/corner_ust"
                            android:backgroundTint="#C3B74D"
                            android:contentDescription="przycisk menu"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/globe"
                            android:tint="#FFFFFF"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explorer"
                            android:textColor="#959595"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends"
                        android:textColor="#CDCFCD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/corner_prf"
                        android:backgroundTint="#232523"
                        android:padding="8dp"
                        android:contentDescription="przycisk menu"
                        android:scaleType="fitCenter"
                        android:src="@drawable/angle_right"
                        tools:ignore="UseAppTint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#ffffff"
                    android:background="@drawable/corner_ust"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All payments"
                        android:textColor="#CDCFCD"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:background="@drawable/corner_prf"
                        android:backgroundTint="#232523"
                        android:padding="8dp"
                        android:contentDescription="przycisk menu"
                        android:scaleType="fitCenter"
                        android:src="@drawable/angle_right"
                        tools:ignore="UseAppTint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#ffffff"
                    android:background="@drawable/corner_ust"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/bossbar3"
        android:layout_width="wrap_content"
        android:background="@drawable/corner_home_bossbar"
        android:layout_height="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home"
                    android:tint="#454545"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#454545"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@+id/separator10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/market"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stats"
                    android:tint="#454545"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textColor="#454545"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/miner"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pickaxe"
                    android:tint="#454545"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miner"
                    android:textColor="#454545"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/game"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gamepad"
                    android:tint="#454545"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Games"
                    android:textColor="#454545"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@+id/separator13"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pixabay"
                    android:tint="#2EC317"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textColor="#2EC317"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:id="@+id/separator14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/chat"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:contentDescription="przycisk menu"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/comment_username"
                    android:tint="#454545"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textColor="#454545"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>