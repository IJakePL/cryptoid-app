<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212529"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/bossbar1"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home_button1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/angle_left"
                android:tint="#fff"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:text="TWÓRCY APLIKACJI"
                android:textColor="#DFE3E6"
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="visible" />

            <View
                android:id="@+id/separator1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_below="@+id/bossbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/github_r4ved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_ust"
                    android:backgroundTint="#2B2F33"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner_ust_layer"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:contentDescription="przycisk menu"
                            android:padding="7dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_13"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="R4ved / JrRitsu"
                            android:textColor="#DFE3E6"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:text="NestNet Staff"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Jakub Burzyński - udział 85% - kluczowy członek zespołu projektowego, odgrywający kluczową rolę w organizacji i realizacji projektu. Jako lider zespołu, koordynuje wszystkie aspekty działalności projektu, obejmujące zarówno rozwój aplikacji, jak i działanie interfejsu programistycznego aplikacji (API). Jest głównym punktem kontaktowym dla wszystkich nowości związanych z aplikacją, dbając o to, aby wszelkie innowacje były wdrożone zgodnie z oczekiwaniami użytkowników."
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ponadto Jakub zajmuje się administracją projektu, nadzorując wszystkie kwestie związane z dokumentacją, formalnościami i innymi aspektami biurokracji. Jego wszechstronne umiejętności zarządzania pozwalają mu skutecznie kierować zespołem, inspirować współpracę i zapewniać efektywną komunikację wśród wszystkich członków zespołu."
                            android:layout_marginTop="8dp"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible"  />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Jako lider, Jakub jest zaangażowany w proces podejmowania decyzji dotyczących strategii projektu i podejmuje działania mające na celu osiągnięcie wyznaczonych celów. Jego determinacja, zaangażowanie i zdolność do przewidywania potencjalnych wyzwań sprawiają, że jest niezastąpionym członkiem zespołu, który nie tylko realizuje cele projektu, ale także inspiruje innych do osiągania najlepszych wyników."
                            android:layout_marginTop="8dp"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible"  />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/github_xantotech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/corner_ust"
                    android:backgroundTint="#2B2F33"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner_ust_layer"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:contentDescription="przycisk menu"
                            android:padding="7dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_14"
                            tools:ignore="UseAppTint" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="XantoTech"
                            android:textColor="#DFE3E6"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:text="Community manager"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Antoni Sobczak - udział 15% - kluczowy członek zespołu projektowego, choć jego wkład może wynosić 15%, jego wpływ na projekt jest nieoceniony. Specjalizuje się w tworzeniu bezpiecznego i przyjaznego środowiska dla społeczności, zarówno na platformie Discord, jak i poza nią. Jego głównym celem jest budowanie silnej i zaangażowanej społeczności, która aktywnie uczestniczy w życiu projektu."
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Antoni aktywnie rozwija nowe rozwiązania, które pozwalają projektowi osiągać coraz wyższe cele i przyciągać nowe osoby do korzystania z aplikacji oraz dołączania do społeczności. Jego kreatywne podejście sprawia, że projekt jest stale innowacyjny i atrakcyjny dla użytkowników."
                            android:layout_marginTop="8dp"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible"  />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Ponadto, Antoni organizuje różnorodne konkursy i wydarzenia, które angażują społeczność i budują więź między jej członkami. Jego zaangażowanie w reprezentowanie wizerunku projektu jest godne podziwu, ponieważ skutecznie promuje wartości i cele projektu na zewnątrz."
                            android:layout_marginTop="8dp"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible"  />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Antoni nie ogranicza się tylko do tworzenia społeczności - jego umiejętności obejmują również rozwój gier oraz klienta na komputery. Dzięki jego wysiłkom, projekt jest gotowy do współpracy z różnymi przedsiębiorstwami i nawiązywania skutecznych kontaktów biznesowych. Jego wielostronne umiejętności i zaangażowanie są nieocenione dla sukcesu projektu."
                            android:layout_marginTop="8dp"
                            android:textColor="#878787"
                            android:textSize="15sp"
                            android:visibility="visible"  />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/bossbar3"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:backgroundTint="#15191C"
        android:background="@drawable/corner_dsww">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/film"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/search"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/tv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gamepad"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/home"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:id="@+id/separator14"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/comment_alt"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="przycisk menu"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_bars"
                android:tint="#A9A9A9"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>