<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lg_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="przycisk menu"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/angle_left"
            android:tint="#959595"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="158dp"

                android:layout_gravity="center"
                android:src="@drawable/img_19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Create a new wallet"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#808080"
                android:textSize="27sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill out the form to become a member"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#959595"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#E1E1E0"
                android:background="@drawable/corner"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="15dp">

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/referral_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:backgroundTint="#37A6A6A6"
                    android:hint="Referral (optional)"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:backgroundTint="#37A6A6A6"
                    android:hint="Nickname"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:backgroundTint="#37A6A6A6"
                    android:hint="Email"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:backgroundTint="#37A6A6A6"
                    android:hint="Password"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/password_conf_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:backgroundTint="#37A6A6A6"
                    android:hint="Confirm Password"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="#959595"
                    android:textColorHint="#959595"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/gradient_home"
                    android:layout_margin="10dp"
                    android:text="Create your wallet"
                    android:textColor="#E1E1E0"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/zacznij" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CryptoID.pl | Copyright Â© 2024"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#959595"
            android:textSize="17sp"
            android:visibility="visible" />

        <View
            android:id="@+id/separator2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>